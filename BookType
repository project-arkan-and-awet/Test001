            }
            break;
        }
        case 2:                                                     //executes if user enters 2
        {
            cin.ignore();
            cout <<"Enter the IBSN :";
            getline(cin, ti);
            for (int i = 0; i < 10; i++)   // i<3 has replaced by 10
            {
                string t = A[i].r_ISBN();
                if (t == ti)
