#include <stdio.h>
#include <iostream>
#include <array>

using namespace std;

class MemberType
{
    
    public : string First_Name;
    public : string Last_Name;
    public : int Member_id;
    public : int Orders;
    public : int Amount_spent;
    
public:  MemberType(string first_name,string last_name,int member_id)
    {
        First_Name=first_name;
        Last_Name=last_name;
        Member_id=member_id;
        Orders=0;
        Amount_spent=0;
    }
public: string get_First_Name()
    {
        return First_Name;
    }
public: string get_Last_Name()
    {
        return Last_Name;
    }
public: int get_Member_id()
    {
        return Member_id;
    }
public: int get_Order()
    {
        return Orders;
    }
public: int  get_Amount_Spent()
    {
        return Amount_spent;
    }
public: void set_First_Name(string first)
    {
        First_Name=first;
    }
public: void set_Last_Name(string last)
    {
        Last_Name=last;
    }
public: void set_Member_id(int id)
    {
        Member_id=id;
    }
    
    
    
};
